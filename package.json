{
  "name": "@nichoth/events",
  "version": "2.0.0",
  "description": "An event bus and helpers",
  "main": "dist/index.js",
  "type": "module",
  "author": "nichoth <nichoth@gmail.com> (https://nichoth.com)",
  "scripts": {
    "lint": "standardx -v",
    "build": "npm run build-cjs && npm run build-js",
    "build-cjs": "esbuild src/index.js --bundle --format=cjs --keep-names --outdir=./dist --out-extension:.js=.cjs",
    "build-js": "esbuild src/*.js --format=esm --keep-names --outdir=./dist",
    "preversion": "check-deps . 0 && npm run lint",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build",
    "test": "node ./test/test.js | tap-arc"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.cjs"
    }
  },
  "dependencies": {
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@nichoth/check-max-deps": "0.0.2",
    "esbuild": "^0.19.2",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tape": "^5.6.6"
  },
  "standardx": {
    "ignore": [
      "dist/*"
    ]
  },
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/events.git"
  },
  "keywords": [
    "events",
    "event",
    "emitter"
  ],
  "bugs": {
    "url": "https://github.com/nichoth/events/issues"
  },
  "homepage": "https://github.com/nichoth/events#readme"
}
